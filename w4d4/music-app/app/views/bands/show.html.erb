<h1>Band: <%= @band.name %></h1>
<% unless @band_albums.empty? %>
  <ol>
    <% @band_albums.each do |album| %>
      <li><%= link_to album.name, album_url(album) %><br /></li>
    <% end %>
  </ol>
<% else %>
  <h2>No Albums!</h2>
<% end %>

<%= button_to "Create New Album", new_band_album_url(band_id: @band.id), method: :get %>
<%= button_to "Edit Band", edit_band_url(@band), method: :get %>
<%= button_to "Back to Bands", bands_url, method: :get %>
<%= button_to "Delete Band",
            band_url(@band),
            method: :delete,
            data: { confirm: "Really Delete #{@band.name}?" } %>
