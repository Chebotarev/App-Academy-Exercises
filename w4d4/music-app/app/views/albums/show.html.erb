<h1>Album: <%= @album.name %></h1>
<h3>Production: <%= @album.production %></h3>
<% unless @album_tracks.empty? %>
  <ol>
    <% @album_tracks.each do |track| %>
      <li><%= link_to track.name, track_url(track) %></li>
    <% end %>
  </ol>
<% else %>
  <h2>No tracks!</h2>
<% end %>

<%= button_to "Create New Track",
            new_album_track_url(album_id: @album.id),
            method: :get %>
<%= button_to "Edit Album", edit_album_url(@album), method: :get %>
<%= button_to "Back to Band", band_url(@album.band_id), method: :get %>
<%= button_to "Create New Album",
            new_band_album_url(band_id: @album.band_id),
            method: :get %>

<%= button_to "Delete Album",
            album_url(@album),
            method: :delete,
            data: { confirm: "Really Delete #{@album.name}?" } %>
